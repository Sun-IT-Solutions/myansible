main.yml

var_files:
 - /home/ansible/sqlvar.yml
 
- name: Script will revoke grants from certain user for in AWS RDS
      oracle_sql:
        username: "{{user}}"
        password: "{{password}}"
        service_name: "{{sname}}"
        port: "{{prt}}"
        host: "{{hostnme}}"
        sql: "{{Value}}"
      environment: "{{oracle_env}}"
      register: query_result
      connection: local

   - name: Runs the revoke statements and spool out.
      command: $ORACLE_HOME/sqlplus -s {{user}}/{{password}}@{{sname}} @/home/ansible/Playbooks/{{sname}}/sql/{{Key}}_revoke.sql
      environment: "{{oracle_env}}"
      register: sqloutput
      connection: local


